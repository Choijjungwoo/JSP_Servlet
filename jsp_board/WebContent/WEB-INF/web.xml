<?xml version="1.0" encoding="UTF-8"?>
<web-app>

	<listener>
		<listener-class>com.java.listener.InitListener</listener-class>
	</listener>

	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>
			com.opensymphony.sitemesh.webapp.SiteMeshFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>setCharacterEncodingFilter</filter-name>
		<filter-class>
			org.apache.catalina.filters.SetCharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>setCharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>LoginCheckFilter</filter-name>
		<filter-class>com.java.filter.LoginCheckFilter</filter-class>
		<init-param>
			<param-name>exclude</param-name>
			<param-value>resources,commons,.jsp</param-value>			
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>CookieFilter</filter-name>
		<filter-class>com.java.filter.CookieFilter</filter-class>
		<init-param>
			<param-name>menuURL</param-name>
			<param-value>member,board,pds</param-value>			
		</init-param>
		<init-param>
			<param-name>menuNames</param-name>
			<param-value>회원관리,자유게시판,자료실</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CookieFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>